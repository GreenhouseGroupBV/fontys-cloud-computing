    <script>

    function updateNumber(id, value) {
        document.getElementById(id).innerHtml = value;
        document.getElementById(id).innerHtml = 'Yo';
    }

    function addAuth(xhr) {
        xhr.setRequestHeader('Authorization', 'Basic ' + btoa('admin:secret'))
    }

    function runQueueDepth() {
        var pending = false;
        var interval = 500;

        function start() {
            getData();
            setInterval(getData, interval);
        };

        function getData() {
            if (pending) {
                return;
            }
            pending = true;
            $.ajax({
                type: 'GET',
                url: '/queue-depth',
                beforeSend: addAuth,
                success: function(data) {
                    var queue_depth = data['queue_depth'];
                    updateNumber('countQueue', queue_depth);
                },
                complete: function(data) {
                    pending = false;
                }
            })
        };

        start();
    }

    function runStats() {
        var pending = false;
        var interval = 500;

        function start() {
            getData();
            setInterval(getData, interval);
        };

        function getData() {
            if (pending) {
                return;
            }
            pending = true;
            $.ajax({
                type: 'GET',
                url: '/stats',
                beforeSend: addAuth,
                success: function(data) {
                    console.log(data);
                    console.log(document.getElementById('countProcessed'));
                    console.log(document.getElementById('countProcessed').innerHtml);
                    document.getElementById('countProcessed').innerHtml = 5432;
            //        updateNumber('countPortraits', data['portrait']);
            //        updateNumber('countLandscapes', data['landscape']);
            //        updateNumber('countProcessed', data['processed']);
                },
                complete: function(data) {
                    pending = false;
                }
            });
        }
        start();
    };

    window.onload = function() {
        //runStats();
        runQueueDepth();
    }


        // set some dirty vars
        var interval = 500;    // Interval
        var sendPeriodic;       // needs to be initializedi
        var pending = false;
        // end of vars

        function getData(){
            // stop the former interval
            clearInterval(sendPeriodic);
            // Start new with sending
            sendPeriodic = setInterval( function() { getDataFromServer(); }, interval);
        };
        function updateUi(responseData){
            var portrait = responseData['portrait'];
            var landscape = responseData['landscape'];
        var queue = responseData['queue_depth'];
        var processed = responseData['votes_processed'];

            document.getElementById('countPortraits').innerHTML = portrait;
            document.getElementById('countLandscapes').innerHTML = landscape;
            //document.getElementById('countQueue').innerHTML = queue;
            document.getElementById('countProcessed').innerHTML = processed;
        }
        function getQueueDepth() {
            $.ajax({
                type: 'GET',
                url: '/queue-depth',
                beforeSend: addAuth,
                success: function(data) {
                    var queue_depth = data['queue_depth'];
                    document.getElementById('countQueue').innerHtml = queue_depth;
                },
                complete: function(data) {
                }
            })
        }
        function getDataFromServer() {
        if (pending) {
            return;
        }
        pending = true;

            // ajax call van data
            $.ajax
              ({
                type: "GET",
                url: "/dashboard",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader ("Authorization", "Basic " + btoa("admin:secret"));
                },
                success: function (responseData){
                    updateUi(responseData);
                },
            complete: function(data) {
            pending = false;
        }
            });
        }

        window.onload = function(){
        getDataFromServer();
            getData();
        }


    </script>
